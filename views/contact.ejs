<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us</title>
    <!-- <link rel="stylesheet" href="/styleForm.css"> -->
    <link rel="stylesheet" href="/style.css">
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Font link -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Pacifico&display=swap"
        rel="stylesheet">

    <style>
        #form-div {
            max-width: 500px;
            margin: 0 auto 60px;
            padding: 20px;
            text-align: center;
        }

        #form-heading {
            width: 100%;
            padding: 40px 20px 20px;
            font-family: "Montserrat", sans-serif;
            font-optical-sizing: auto;
            font-weight: 800;
            font-size: 2.5rem;
            font-style: normal;
            text-align: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 20px;
        }
    </style>

    <!-- font awesome link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

</head>

<body>
    <!-- Header -->
    <%- include("includes/head.ejs") %>

    <!-- Contact Heading -->
    <div id="form-heading"><i class="fa-regular fa-address-card"></i>&nbsp;Contact Us</div>

    <!-- Contact Form -->
    <div id="form-div">
        <form method="post" action="/contact"
            class="bg-white p-8 rounded-xl shadow-lg w-80 text-center space-y-4 border-2 border-gray-200">

            <% if (errors && errors.length > 0) { %>
                <div style="background-color: #fee; border: 1px solid #fcc; padding: 10px; border-radius: 5px; margin-bottom: 15px;">
                    <ul style="list-style: none; padding: 0; margin: 0; text-align: left;">
                        <% errors.forEach(error => { %>
                            <li style="color: #c33; margin-bottom: 5px;">â€¢ <%= error %></li>
                        <% }); %>
                    </ul>
                </div>
            <% } %>

            <!-- Name -->
            <input type="text" name="name" placeholder="Enter Your Name"
                class="w-[90%] px-3 py-2 border border-gray-300 rounded-md text-sm" required 
                value="<%= formData && formData.name ? formData.name : '' %>" />

            <!-- Email -->
            <input type="email" name="email" placeholder="Enter Your Email"
                class="w-[90%] px-3 py-2 border border-gray-300 rounded-md text-sm" required 
                value="<%= formData && formData.email ? formData.email : '' %>" />

            <!-- Message -->
            <textarea name="message" placeholder="Write your message" rows="5"
                class="w-[90%] px-3 py-2 border border-gray-300 rounded-md text-sm" required><%= formData && formData.message ? formData.message : '' %></textarea>

            <!-- Submit -->
            <button type="submit"
                class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 text-sm font-medium">
                Send Message
            </button>
        </form>
    </div>

    <!-- Footer -->
    <%- include("includes/footer.ejs") %>
</body>

</html>
